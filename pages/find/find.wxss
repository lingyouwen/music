/* pages/find/find.wxss */
.main{
    /* width: 100%; */
    padding: 50rpx 50rpx;
}
.main .topbox{
    background-color: #f1f1f1;
    height: 100rpx;
    border-radius: 50rpx;
    overflow: hidden;
}
.topbox input{
    width: 500rpx;
    /* background-color: pink; */
    height: 100rpx;
    padding-left: 50rpx;
    float: left;
    color: #666;
}
.topbox .btn{
    width: 100rpx;
    height: 100rpx;
    float: left;
    position: relative;
}
.btn image{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 65rpx;
    height: 65rpx;
}
.titlebox{
    height: 100rpx;
    /* background: pink; */
}
.titlebox .txt{
    float: left;
    font-size: 36rpx;
    line-height: 100rpx;
    text-align: center;
    padding-left: 20rpx;
}
.titlebox .txt_r{
    position: relative;
    float: right;
    width: 130rpx;
    height: 50rpx;
    border: 1rpx solid #888;
    text-align: center;
    color: #888;
    border-radius: 50rpx;
    motion-path: 20rpx;
    margin-top: 25rpx;
    padding-right: 10rpx;
    /* margin-right: 30rpx; */
    line-height: 50rpx; 
}
.txt_r image{
    position: absolute;
    top: -4rpx;right: -5rpx;
    width: 60rpx;
    height: 60rpx;
}
/* 热门推荐 */
/* .hotlist{
    height: 500rpx; 
    background-color: pink;
} */
.hotlist .hotitem{
    width: 188rpx;
    height: 240rpx;
    float: left;
    margin:15rpx;
}
.hotlist .hotitem image{ 
    width: 180rpx;
    height: 180rpx;
    border-radius: 20rpx;
}
.hotitem text{
    font-size: 26rpx;
    width: 180rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    color: #888;
    display: block;
}
/* 伪元素清楚浮动解决高度塌陷 */
.clearfix::after{
    content:"";
    clear:both;
    display:block;
    height:0;
    overflow:hidden;
    visibility:hidden;
}